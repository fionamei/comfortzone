<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".notification.NotificationActivity">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/swNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/titleMargin"
        android:checked="true"
        android:text="@string/notifications"
        android:textSize="@dimen/titleTextSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/titleMargin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/time_of_day"
            android:textColor="@color/black"
            android:textSize="@dimen/generalTextSize" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNotificationTime"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mainButtonBlue"
            android:textSize="@dimen/miniTextSize"
            app:backgroundTint="@android:color/transparent"
            app:rippleColor="@color/fillColorBlue"
            app:strokeColor="@color/mainButtonBlue"
            app:strokeWidth="@dimen/buttonStroke"
            tools:text="4:00 PM" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/titleMargin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/how_frequent"
            android:textColor="@color/black"
            android:textSize="@dimen/generalTextSize" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFrequency"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_frequency"
            android:textColor="@color/mainButtonBlue"
            android:textSize="@dimen/miniTextSize"
            app:backgroundTint="@android:color/transparent"
            app:rippleColor="@color/fillColorBlue"
            app:strokeColor="@color/mainButtonBlue"
            app:strokeWidth="@dimen/buttonStroke" />
    </LinearLayout>

</LinearLayout>