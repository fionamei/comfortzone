<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".flight.ui.CityDetailActivity">


        <TextView
            android:id="@+id/tvCityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/titleMargin"
            android:layout_marginTop="@dimen/titleMargin"
            android:layout_marginBottom="@dimen/generalMargin"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/titleTextSize"
            android:textStyle="bold"
            tools:text="New York City" />

        <ImageView
            android:id="@+id/ivCityIcon"
            android:layout_width="@dimen/cityDetailImageSize"
            android:layout_height="@dimen/cityDetailImageSize"
            android:layout_gravity="center"
            android:transitionName="@string/cityIcon"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvCityDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/generalMargin"
            android:textSize="@dimen/generalTextSize"
            android:textColor="@color/black"
            android:gravity="center"
            tools:text="new york city is so great!!!" />

        <Button
            android:id="@+id/btnBookFlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/generalMargin"
            android:text="@string/book_a_flight" />
    </LinearLayout>
</ScrollView>